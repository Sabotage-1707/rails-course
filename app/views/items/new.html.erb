<div style="align:center">
    <h1>Create new Item </h1>
    <%= simple_form_for @item do |f|%>
        <%=f.input  :name,label: t("applicationrecord.attributes.item.name"), input_html:{class:"form-text"}%>
        <%=f.input  :price, label: t("applicationrecord.attributes.item.price"), input_html:{class: "form-text"}, required: true%>
        <%=f.input  :seller_id, label: t("applicationrecord.attributes.item.seller"),collection: @sellers , required: true%>
        <%=f.input  :description, label: t("item.description"), input_html:{class: "form-text"}%>



        <%=f.button :submit, "Create #{t("applicationrecord.models.item")}", class:"btn-primary"%>
    <% end %>
    <%= render partial:"shared/email"%>
</div>
