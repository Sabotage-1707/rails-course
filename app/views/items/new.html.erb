<h1>Create new Item </h1>
<%= form_tag items_path , method: :post do %>
    <%=label_tag  :name%>
    <%=text_field_tag  :name %>

    <%=label_tag :price %>
    <%=text_field_tag  :price %>

    <%=label_tag :seller_id %>
    <%=select_tag :seller_id, options_from_collection_for_select(@sellers, :id, :name, "1")%>
    </br>
    </br>
    <%=label_tag :description %>
    <%=text_field_tag  :description %>

    <%=submit_tag "Submit"%>
<% end %>
<%= render "shared/email"%>

