
<ul>
    <% @items.each  do |item|%>
        <li><%= link_to item.name, item_path(item)%> </li>
        <li><%=item.price%></li>
        <li><%=item.votes%>,  <%= link_to "+" , upvote_item_path(item)%></li>
        <li><%=links_to_content(item.description, 100, 100)%></li>
        <li><%=button_to "delete",  item_path(item ), method: :delete%></li>
        <br>
    <%end%>
    <%= button_to "create new item" , new_item_path, method: :get%>
    <%= button_to "only expensive  " , expensive_items_path, method: :get%>
</ul>
<%= render "shared/email"%>

