<h1>edit <%=@item.name%> </h1>
<%= form_tag item_path(@item) , method: :put do %>
    <%=label_tag  :name%>
    <%=text_field_tag  :name, @item.name %>

    <%=label_tag :price %>
    <%=text_field_tag  :price, @item.price %>

    <%=label_tag :seller_id %>
    <%=select_tag :seller_id, options_from_collection_for_select(@sellers, :id, :name)%>
    </br>
    </br>
    <%=label_tag :description %>
    <%=text_field_tag  :description, @item.description %>
    
    <%=submit_tag "Submit"%>
<% end %>
<%= render "shared/email"%>
